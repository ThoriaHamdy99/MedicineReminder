<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/second_dialog_medicine_cardView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/second_dialog_medicine_icon"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.30"
                    android:src="@drawable/medicine" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/second_dialog_medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Pandola"
                        android:textDirection="ltr"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/second_dialog_medicine_dos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="150mg, 1 capsule"
                        android:textColor="@color/mainColor"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_name"/>

                    <TextView
                        android:id="@+id/second_dialog_medicine_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="After Breakfast"
                        android:textColor="@color/mainColor"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_dos"/>

                    <TextView
                        android:id="@+id/second_dialog_medicine_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:text="Headache"
                        android:textColor="@color/mainColor"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_note"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:paddingBottom="1dp"
                    android:layout_weight="1.20">

                    <ImageView
                        android:id="@+id/second_dialog_notif_icon_Dia"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/notification_bell" />

                    <CheckBox
                        android:id="@+id/second_dialog_medicine_time_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:55 AM"
                        android:textColor="@color/mainColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_notif_icon_Dia"
                        />
                    <CheckBox
                        android:id="@+id/second_dialog_medicine_time_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:55 AM"
                        android:textColor="@color/mainColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_time_one"
                        />
                    <CheckBox
                        android:id="@+id/second_dialog_medicine_time_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:55 AM"
                        android:textColor="@color/mainColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_time_two"
                        />
                    <CheckBox
                        android:id="@+id/second_dialog_medicine_time_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:55 AM"
                        android:textColor="@color/mainColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/second_dialog_medicine_time_three"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/second_dialog_cancel_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/et_textSize"
                    android:text="@string/cancel_med_dialog"/>
                <Button
                    android:id="@+id/second_dialog_done_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/et_textSize"
                    android:gravity="center"
                    android:text="@string/doneBtnSecondMedicineDialog"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>