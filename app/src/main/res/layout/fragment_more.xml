<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".more_screen.view.MoreFragment">

    <FrameLayout
        android:id="@+id/fl_header_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dis_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_white_color_back_24dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingStart="@dimen/toolbar_title_paddingStart"
                android:paddingEnd="0dp"
                android:text="@string/more"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_header_image">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/yy"
            android:scaleType="centerCrop"
            android:id="@+id/moreImageProfile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoraya Hamdy"
            android:id="@+id/moreName"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toEndOf="@+id/moreImageProfile"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thoriahamdy743@gmail.com"
            android:id="@+id/moreEmail"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toEndOf="@+id/moreImageProfile"
            app:layout_constraintTop_toBottomOf="@+id/moreName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:background="@color/colorLightGray"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/moreMyProfileButton"
        android:textSize="18dp"
        android:text="   My Profile"
        android:drawableLeft="@drawable/profile_icon"
        android:textDirection="ltr"
        android:textAlignment="viewStart"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="?android:selectableItemBackground"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreMyProfileButton"
        android:background="@color/colorLightGray"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/morePatientButton"
        android:textSize="18dp"
        android:text="   Patients"
        android:drawableLeft="@drawable/patient_icon1"
        android:textDirection="ltr"
        android:textAlignment="viewStart"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="?android:selectableItemBackground"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/morePatientButton"
        android:background="@color/colorLightGray"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/moreTrackerButton"
        android:textSize="18dp"
        android:drawableLeft="@drawable/tracker_icon1"
        android:text="   Trackers"
        android:textDirection="ltr"
        android:textAlignment="viewStart"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="?android:selectableItemBackground"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreTrackerButton"
        android:background="@color/colorLightGray"/>

</androidx.constraintlayout.widget.ConstraintLayout>